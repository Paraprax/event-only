<%= form_tag("/job_applications", method: "post") do %>
  <p><%= label_tag(:full_name, "Full name:") %>
  <%= text_field_tag(:full_name) %></p>
  <p><%= label_tag(:phone_number, "Phone number:") %>
  <%= text_field_tag(:phone_number) %></p>
  <p><%= label_tag(:hobby, "Favourite hobby:") %>
  <%= text_field_tag(:hobby) %></p>
  <p><%= label_tag(:years_experience, "Years experience:") %>
  <%= number_field_tag(:years_experience) %></p>
  <p><%= label_tag(:available_date, "Available date:") %>
  <%= date_field_tag(:date) %></p>
  <%= submit_tag("Create job application") %>
<% end %>
